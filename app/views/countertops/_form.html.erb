<%= form_for @countertop do |f| %>
 <% if @countertop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@countertop.errors.count, "error") %> prohibited this Countertop Project from being saved:</h2>

      <ul>
      <% @countertop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group" align="left">
    <%= f.label :counterzip, "Tell us where your countertop project is going." %>
    <%= f.text_field :counterzip, class: "form-control", placeholder: "Enter your Zip Code" %>
</div>

<div class="form-group" align="left">
    <%= f.label :countertype_id, "What type of countertop material do you need?" %></br>
    <%= f.collection_select :countertype_id, Countertype.all, :id, :name, { :prompt => "Select Your Material" }, class: "input-sm"  %>
</div>

<div class="form-group", align="left">
    <%= f.label :countersize, "How much countertop do you need?" %>
    <%= f.text_field :countersize, class: "form-control", placeholder: "Enter the amount of countertop you need in square feet" %>
</div>

<br/>
 <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-lg" %>
 </div>

<% end %>
